<section class="sct-color-1 slice">
  <div class="container">
    <% if flash[:notice] %>
      <div class = "flash">
        <%= flash[:notice] %>
    </div>
    <% end %>
    <% if @book.errors.any? %>
      <div class="alert">
        <div class="alert-title">
          <%= @book.errors.count %> errors prohibited this obj from being saved:
        </div>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/list', books: @books %>
        <%= render 'books/listc' %>
      </div>
      <div class="col-xs-9 list_style">
        <h1>Books</h1>
        <table class="table table-striped">
          <tr>
            <th colspan="1">
            <th>Title</th>
            <th>Opnion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, size: "50x50" ,fallback: "no_image.jpg"%>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
</section>
