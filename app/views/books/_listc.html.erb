 <section>
  <%= form_with model:@book, local:true do |f| %>
    <h2>New book</h2>
    <label>Title</label>
    <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
    <label>Opinion</label>
    <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Body" %><br />
    <%= f.submit "Create Book", class:"btn-crbook" %>
  <% end %>
</section>