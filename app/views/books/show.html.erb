<section class="sct-color-1 slice">
  <div class="container">
    <% if flash[:notice] %>
      <div class = "flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-3">
        <%= render 'books/list', books: @books %>
        <%= render 'books/listc', book: @book %>
      </div>
      <div class="col-xs-9">
        <h1>Book detail</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th colspan="1">
              <th>Title</th>
              <th>Opinion</th>
              <% if @books.user.id == current_user.id %>
                <th colspan="2">
              <% end %>
            </tr>
          </thead>
          <tbody>
          <tr>
            <td>
              <p><%= attachment_image_tag @books.user, :profile_image, size: "50x50" ,fallback: "no_image.jpg"%></p>
               <p><%= link_to user_path(@books.user.id) do %>
                  <%= @books.user.name %>
                <% end %></p>
              </td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <% if @books.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@books.id), {class: "btn-edit"} %></td>
                <td><div class = "btn-delete"><%= link_to 'Destroy', book_path(@books), method: :delete %></div></td>
            <% end %>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
