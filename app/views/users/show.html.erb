<section class="sct-color-1 slice">
  <div class="container">
    <% if flash[:notice] %>
      <div class = "flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-3">
        <%= render 'books/list2', books: @books %>
        <%= render 'books/listc', book: @book%>
      </div>
      <div class="col-xs-9">
        <h1>Books</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, size: "50x50", fallback:"no_image.jpeg"%></td>
                <td><%= link_to book_path(book.id), {class: "nav-link"} do %>
                  <%= book.title %>
                <% end %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

