<setion>
  <div class="container">
    <% if flash[:notice] %>
      <div class = "flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/list', books: @books %>
        <%= render 'books/listc' %>
      </div>
      <div class="col-xs-9">
        <h1>All users</h1>
        <table class="table table-striped">
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="1">
          </tr>
          <% @users.each do |user| %>
            <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpeg"%></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</section>

