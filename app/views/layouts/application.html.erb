<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
	  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <div class="header">
      <nav class="navbar navbar-main navbar-shadow">
        <div class="container relative">
          <div class="navbar-header">
            <h4>Bookers</h4>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to ' Home', user_path(current_user.id), class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to ' Users', users_path, class:"glyphicon glyphicon-user usres" %>
                </li>
                <li class="">
                  <%= link_to ' books', books_path, class:"glyphicon glyphicon-book books" %>
                </li>
                <li class="">
                  <%= link_to ' logout'.downcase, destroy_user_session_path, class:"glyphicon glyphicon-log-out logout", method: :delete %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to ' Home', root_path, class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to ' About', home_about_path, class:"glyphicon glyphicon-link about" %>
                  </li>
                <li class="">
                  <%= link_to ' Sign up', new_user_registration_path, class:"glyphicon glyphicon-edit sign_up" %>
                </li>
                <li class="">
                  <%= link_to ' login', new_user_session_path, class:"glyphicon glyphicon-log-in sign_in" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>

  <%= yield %>

<footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

  </body>
</html>
