<div class='container'>
  <h2>Log in</h2>
  <div class="form-body">
    <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
      <div class="form-group has-icon">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "name" %>
      </div>
      <div class="form-group has-icon">
        <%= f.label :Password %><br />
        <%= f.password_field :password, autocomplete: true, placeholder:"Password" %>
      </div>
      <%= f.submit "Log in", class:"btn-login-new"%><br />
      <a href="/users/sign_up">sign up</a>
    <% end %>
  </div>
</div>